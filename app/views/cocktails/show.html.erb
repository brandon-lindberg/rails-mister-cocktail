<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %> |
      <%= dose.description %> |
      <%= link_to 'Delete Dose', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }%>
    </li>
  <% end %>
</ul>

<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<br>
<br>

<%= link_to 'Add a Dose', new_cocktail_dose_path(@cocktail) %> |
<%= link_to 'Home', cocktails_path  %> |
<%= link_to 'Create New Cocktail', new_cocktail_path  %>

